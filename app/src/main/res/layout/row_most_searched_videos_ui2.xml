<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/rv_videos_item_margin_end"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/videoCV"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        android:background="@color/textColorGray"
        android:backgroundTint="@color/iconTintGrayBottomNav"
        app:cardCornerRadius="@dimen/common_card_corner_radius"
        app:cardElevation="8dp">

        <WebView
            android:id="@+id/youtubeVideo_WV"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/videoDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rv_videos_item_tv_margin_top"
        android:lineSpacingExtra="@dimen/tv_common_line_spacing1"
        android:text="@string/how_to_register"
        android:textAlignment="center"
        android:textColor="@color/textColorBlack"
        android:textSize="@dimen/common_label_text_size" />

</LinearLayout>
