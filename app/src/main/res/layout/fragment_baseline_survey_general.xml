<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="generalConfig"
            type="org.intelehealth.app.ui.baseline_survey.config.GeneralBaselineConfig" />

        <variable
            name="baselineEditMode"
            type="Boolean" />

        <variable
            name="baseline"
            type="org.intelehealth.app.ui.baseline_survey.model.Baseline" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/margin_24"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/btnGeneralBaselineNext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/std_16dp">

                <LinearLayout
                    android:id="@+id/llOccupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.occupation.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_occupation_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.occupation.mandatory ? @string/general_occupation + ` *` : @string/general_occupation}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/general_occupation" />

                    <org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/til_occupation_option"
                        style="@style/AppTheme.OutlineInputBox.DropDown"
                        config="@{generalConfig.occupation}"
                        editMode="@{baselineEditMode}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/ac_occupation"
                            style="@style/AppTheme.InputBox"
                            bindAutoCompleteValue="@{baseline.occupation}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_occupation_txt"
                            android:inputType="none" />
                    </org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCaste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.caste.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llOccupation">

                    <TextView
                        android:id="@+id/tv_caste_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.caste.mandatory ? @string/general_caste + ` *` : @string/general_caste}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/general_caste" />

                    <org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/til_caste_option"
                        style="@style/AppTheme.OutlineInputBox.DropDown"
                        config="@{generalConfig.caste}"
                        editMode="@{baselineEditMode}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/ac_caste"
                            style="@style/AppTheme.InputBox"
                            bindAutoCompleteValue="@{baseline.caste}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_caste"
                            android:inputType="none" />
                    </org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.education.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llCaste">

                    <TextView
                        android:id="@+id/tv_education_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.education.mandatory ? @string/general_education + ` *` : @string/general_education}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/general_education" />

                    <org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/til_education_option"
                        style="@style/AppTheme.OutlineInputBox.DropDown"
                        config="@{generalConfig.education}"
                        editMode="@{baselineEditMode}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/ac_education"
                            style="@style/AppTheme.InputBox"
                            bindAutoCompleteValue="@{baseline.education}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_education"
                            android:inputType="none" />
                    </org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAyushmanCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.ayushmanCard.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llEducation">

                    <TextView
                        android:id="@+id/tv_AC_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.ayushmanCard.mandatory ? @string/ayushman_card_question + ` *` : @string/ayushman_card_question}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/ayushman_card_question" />

                    <RadioGroup
                        android:id="@+id/rg_AC_options"
                        style="@style/RadioButtonStyleSelection"
                        config="@{generalConfig.ayushmanCard}"
                        editMode="@{baselineEditMode}"
                        radioButtonValue="@{baseline.ayushmanCard}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioACYes"
                            config="@{generalConfig.ayushmanCard}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/radioACNo"
                            config="@{generalConfig.ayushmanCard}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/no" />

                        <RadioButton
                            android:id="@+id/radioACNotSure"
                            config="@{generalConfig.ayushmanCard}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_not_sure" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMgnregaCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.mgnrega.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llAyushmanCard">

                    <TextView
                        android:id="@+id/tv_MC_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.mgnrega.mandatory ? @string/mgnrega_card_question + ` *` : @string/mgnrega_card_question}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/mgnrega_card_question" />

                    <RadioGroup
                        android:id="@+id/rg_MC_options"
                        style="@style/RadioButtonStyleSelection"
                        config="@{generalConfig.mgnrega}"
                        editMode="@{baselineEditMode}"
                        radioButtonValue="@{baseline.mgnregaCard}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioMCYes"
                            config="@{generalConfig.mgnrega}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/radioMCNo"
                            config="@{generalConfig.mgnrega}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/no" />

                        <RadioButton
                            android:id="@+id/radioMCNotSure"
                            config="@{generalConfig.mgnrega}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generic_not_sure" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llBankAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.bankAccount.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llMgnregaCard">

                    <TextView
                        android:id="@+id/tv_Bank_account_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.bankAccount.mandatory ? @string/bank_account_question + ` *` : @string/bank_account_question}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/bank_account_question" />

                    <RadioGroup
                        android:id="@+id/rg_BA_options"
                        style="@style/RadioButtonStyleSelection"
                        config="@{generalConfig.bankAccount}"
                        editMode="@{baselineEditMode}"
                        radioButtonValue="@{baseline.bankAccount}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioBAYes"
                            config="@{generalConfig.bankAccount}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/radioBANo"
                            config="@{generalConfig.bankAccount}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/no" />

                        <RadioButton
                            android:id="@+id/radioBANotSure"
                            config="@{generalConfig.bankAccount}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/decline_to_answer" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llPhoneOwnership"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.phoneOwnership.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llBankAccount">

                    <TextView
                        android:id="@+id/tv_phone_ownership_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.phoneOwnership.mandatory ? @string/phone_ownership + ` *` : @string/phone_ownership}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/phone_ownership" />

                    <org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout
                        android:id="@+id/til_phone_ownership_option"
                        style="@style/AppTheme.OutlineInputBox.DropDown"
                        config="@{generalConfig.phoneOwnership}"
                        editMode="@{baselineEditMode}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_4"
                        app:hintEnabled="false">

                        <AutoCompleteTextView
                            android:id="@+id/ac_phone_ownership"
                            style="@style/AppTheme.InputBox"
                            bindAutoCompleteValue="@{baseline.phoneOwnership}"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_phone_ownership"
                            android:inputType="none" />
                    </org.intelehealth.app.ui.custom.RightAlignErrorTextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFamilyWhatsapp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.familyWhatsapp.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llPhoneOwnership">

                    <TextView
                        android:id="@+id/tv_family_whatsapp_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.familyWhatsapp.mandatory ? @string/family_whatsapp_question + ` *` : @string/family_whatsapp_question}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/family_whatsapp_question" />

                    <RadioGroup
                        android:id="@+id/rg_family_whatsapp_options"
                        style="@style/RadioButtonStyleSelection"
                        config="@{generalConfig.familyWhatsapp}"
                        editMode="@{baselineEditMode}"
                        radioButtonValue="@{baseline.familyWhatsApp}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioPersonal"
                            config="@{generalConfig.familyWhatsapp}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/generic_yes_personal" />

                        <RadioButton
                            android:id="@+id/radioFamilyMember"
                            config="@{generalConfig.familyWhatsapp}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/generic_yes_family" />

                        <RadioButton
                            android:id="@+id/radioFamilyWhatsappNo"
                            config="@{generalConfig.familyWhatsapp}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no" />
                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llMaritalStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/std_12dp"
                    android:orientation="vertical"
                    android:visibility="@{generalConfig.maritalStatus.enabled ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/llFamilyWhatsapp">

                    <TextView
                        android:id="@+id/tv_marital_status_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3sp"
                        android:text="@{generalConfig.maritalStatus.mandatory ? @string/marital_status_question + ` *` : @string/marital_status_question}"
                        android:textAppearance="@style/blur_txtview"
                        android:textSize="@null"
                        tools:text="@string/marital_status_question" />

                    <RadioGroup
                        android:id="@+id/rg_marital_status_options"
                        style="@style/RadioButtonStyleSelection"
                        config="@{generalConfig.maritalStatus}"
                        editMode="@{baselineEditMode}"
                        radioButtonValue="@{baseline.martialStatus}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/radioMarried"
                            config="@{generalConfig.maritalStatus}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/married" />

                        <RadioButton
                            android:id="@+id/radioUnmarried"
                            config="@{generalConfig.maritalStatus}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_20"
                            android:text="@string/unmarried" />

                        <RadioButton
                            android:id="@+id/radioWidowed"
                            config="@{generalConfig.maritalStatus}"
                            editMode="@{baselineEditMode}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/widowed" />
                    </RadioGroup>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnGeneralBaselineNext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fu_btn_size"
            android:layout_marginStart="@dimen/margin_24"
            android:layout_marginEnd="@dimen/margin_24"
            android:layout_marginBottom="@dimen/std_16dp"
            android:background="@drawable/ui2_common_primary_bg"
            android:drawableEnd="@drawable/ui2_ic_baseline_arrow_forward_24"
            android:paddingHorizontal="@dimen/margin_10"
            android:text="@string/next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>