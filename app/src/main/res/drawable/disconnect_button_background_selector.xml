<!-- res/drawable/disconnect_button_background_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled state -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_8dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp"
                android:color="@color/grey_button_bg" />
            <solid android:color="#0Dffffff" />
            <!-- Transparent background for disabled state -->
        </shape>
    </item>

    <!-- Enabled state -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/corner_radius_8dp" /> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/grey_button_bg" /> <!-- Enabled border color -->
            <solid android:color="@color/white" /> <!-- Transparent background for enabled state -->
        </shape>
    </item>
</selector>
