<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <stroke
                android:width="2dp"
                android:color="#ffffff" />
            <corners android:radius="15dp" />
            <size
                android:width="180dp"
                android:height="180dp" /> <!-- Adjust this value for background size -->
        </shape>
    </item>

    <item>
        <bitmap
            android:width="20dp"
            android:height="20dp"
            android:gravity="center"
            android:src="@mipmap/ic_launcher_round" /> <!-- Adjust this value to minimize the logo -->
    </item>

</layer-list>
